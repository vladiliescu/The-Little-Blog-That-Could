@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
    Layout = "_Layout";
}
<div class="row">
    <div class="span7">
        <form id="form1" enctype="multipart/form-data" method="post" action="/add">
        <fieldset>
            <legend>Add photo</legend>
            <div class="control-group">
                <label for="photo">Photo:</label>
                <div class="controls">
                    <input type="file" name="photo" id="photo" class="input-file" autofocus required />
                </div>
            </div>
            <div class="control-group">
                <label for="caption">Caption <em>(optional)</em>:</label>
                <div class="controls">
                    <input type="text" name="caption" id="caption" />
                </div>
            </div>
            <div class="form-actions">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a href="/" class="btn">Cancel</a>
            </div>
        </fieldset>
        </form>
    </div>
</div>
